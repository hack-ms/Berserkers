<div class="work-show">
  <div class="work-card">
    <%= image_tag @work.image_url || 'https://s3.amazonaws.com/jera-ligilo/img-placeholder-imovel.png' %>
    <div class="work-description row">
      <div class="col-9">
        <p class="work-name-index no-absolute"><%= @work.obra_nome %></p>
        <p class="work-city-name-index"><%= @work.city.name %></p>
      </div>
      <div class="col-3 my-auto">
        <%= link_to "https://www.google.com.br/maps/dir/-20.4532764,+-54.6050757/#{ @work.lat.gsub(',', '.') },+#{ @work.lng.gsub(',', '.') }", id: 'link_to_maps', target: '_blank' do %>
          <%= image_tag "ic_maps.svg", id: 'ic_maps' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <div class="date-card">
        <p class="work-dates"><%= @work.data_selecao.strftime("%d/%m/%Y") %></p>
        <p class="work-dates-description">Início</p>
      </div>
    </div>
    <div class="col-6">
      <div class="date-card">
        <p class="work-dates"><%= @work.data_conclusao.strftime("%d/%m/%Y") %></p>
        <p class="work-dates-description">Conclusão</p>
      </div>
    </div>
  </div>

  <div class="progress-container">
    <p class="progress-title">PROGRESSO</p>
    <div class="progress" style="height: 8px;">
      <div class="progress-bar" role="progressbar" style="width: <%= @work.execucao_fisica.to_f %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <p class="progress-number"><%= @work.execucao_fisica.to_f %>%</p>
  </div>

  <div class="work-info-card">
    <p class="work-info-title">FICHA DA OBRA</p>

    <div class="row work-info-detail">
      <div class="col-6">
        <span class="float-left">Tipo</span>
      </div>
      <div class="col-6">
        <span class="float-right"><%= @work.work_type.name %></span>
      </div>
      <div class="border-line"></div>
    </div>
    <div class="row work-info-detail">
      <div class="col-6">
        <span class="float-left">Orgão</span>
      </div>
      <div class="col-6">
        <span class="float-right"><%= @work.orgao_responsavel %></span>
      </div>
      <div class="border-line"></div>
    </div>
    <div class="row work-info-detail">
      <div class="col-6">
        <span class="float-left">Execução</span>
      </div>
      <div class="col-6">
        <span class="float-right"><%= @work.executor %></span>
      </div>
      <div class="border-line"></div>
    </div>
    <div class="row work-info-detail">
      <div class="col-6">
        <span class="float-left">Investimento</span>
      </div>
      <div class="col-6">
        <span class="float-right"><%= @work.investment %></span>
      </div>
      <div class="border-line"></div>
    </div>
    <div class="row work-info-detail">
      <div class="col-6">
        <span class="float-left">Status da obra</span>
      </div>
      <div class="col-6">
        <span class="float-right"><%= @work.estagio %></span>
      </div>
    </div>
  </div>

  <% if @favorite.present? %>
  <%= link_to 'PARAR DE ACOMPANHAR', work_favorite_path(@work, @favorite), method: :delete, class: 'btn btn-primary favorite-btn' %>
  <% else %>
  <%= link_to 'ACOMPANHAR OBRA', work_favorites_path(@work), method: :post, class: 'btn btn-primary favorite-btn' %>
  <% end %>

  <%= link_to 'AVALIAR OBRA', new_work_complaint_path(@work), class: 'btn btn-primary complaint-btn' %>
</div>
